# Use Node.js 20 Alpine image
FROM node:20-alpine

WORKDIR /app

# Copy package.json and lock file
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code (though volumes will override this in dev)
COPY . .

# Expose Vite port
EXPOSE 5173

# Command to run Vite in development mode
CMD ["npm", "run", "dev", "--", "--host"]
